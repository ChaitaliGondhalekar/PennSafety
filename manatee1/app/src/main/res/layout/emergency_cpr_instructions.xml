<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
	 xmlns:tools="http://schemas.android.com/tools" 
	 android:orientation="vertical"
	 android:layout_centerHorizontal="true"
	 android:layout_centerVertical="true"
	 android:layout_width="fill_parent"
	 android:layout_height="wrap_content">
	
	<TextView 
		android:id="@+id/cpr_insn_title"
		android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:gravity="center_horizontal"
	    android:layout_marginLeft="25dp"
	    android:layout_marginRight="25dp"
	    android:layout_marginBottom="20dp"
	    android:textColor="#000000"
	    android:textSize="24sp"
	    android:textStyle="bold"
	    android:text="@string/cpr_insn_title"/>
	
	<TextView 
		android:id="@+id/cpr_insn_text1"
		android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:gravity="center_horizontal"
	    android:layout_marginLeft="25dp"
	    android:layout_marginRight="25dp"
	    android:layout_marginBottom="20dp"
	    android:textColor="#000000"
	    android:textSize="20sp"
	   android:text="@string/cpr_insn_1"/>
	
	<TextView 
		android:id="@+id/cpr_insn_text2"
		android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:gravity="center_horizontal"
	    android:layout_marginLeft="25dp"
	    android:layout_marginRight="25dp"
	    android:layout_marginBottom="10dp"
	    android:textColor="#000000"
	    android:textSize="20sp"
	    android:text="@string/cpr_insn_2"/>
	
	<TextView 
		android:id="@+id/cpr_insn_text3"
		android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:gravity="center_horizontal"
	    android:layout_marginLeft="25dp"
	    android:layout_marginRight="25dp"
	    android:layout_marginBottom="10dp"
	    android:textColor="#000000"
	    android:textSize="20sp"
	    android:text="@string/cpr_insn_3"/>
	
	<TextView 
		android:id="@+id/cpr_insn_text4"
		android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
		android:gravity="center_horizontal"
	    android:layout_marginLeft="25dp"
	    android:layout_marginRight="25dp"
	    android:layout_marginBottom="10dp"
	    android:textColor="#000000"
	    android:textSize="20sp"
	    android:text="@string/cpr_insn_4"/>
	
	<ImageView
    	android:id="@+id/cpr_insn_image"
    	android:src="@drawable/cpr_img"
   		android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:gravity="center_horizontal"
    	android:layout_marginLeft="25dp"
    	android:layout_marginRight="25dp"
    	android:layout_marginTop="5dp" 
    	android:layout_marginBottom="10dp"/>

	<Button
	    android:id="@+id/aed_button"
	    android:background="@android:color/holo_red_light"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	   	android:gravity="center_horizontal"
	    android:paddingBottom="15dp"
	    android:paddingTop="15dp"
	    android:textStyle="bold"
	    android:textSize="25sp"
	    android:text="@string/get_aed_location_text" />
	
</LinearLayout>
